{% extends "JuniorEtudiantBundle:Etudiant:layoutEtudiant.html.twig" %}

{% block title %}
{{ parent()}} - Edition
{% endblock %}

{% block content_etudiant %}

    <h2>Mes infos - Editer</h2>

    <div class="row-fluid">
        <div class="input-prepend">
            <span class="add-on">N° Etudiant</span>
            <input class="span4" id="prependedInput" id="disabledInput" type="text" placeholder="{{app.user.numetudiant}}" disabled>
        </div>
        <div class="input-prepend">
            <span class="add-on">Nom</span>
            <input class="span4" id="prependedInput" id="disabledInput" type="text" placeholder="{{app.user.nometudiant}}" disabled>
        </div>
    </div>
    <div class="row-fluid">
        <div class="input-prepend">
            <span class="add-on">N° SS</span>
            <input class="span6" id="prependedInput" id="disabledInput" type="text" placeholder="{{app.user.numsecu}}" disabled>
        </div>
        <div class="input-prepend">
            <span class="add-on">Date de naissance</span>
            <input class="span6" id="prependedInput" id="disabledInput" type="text" placeholder="{{app.user.datenaissance|date("d/m/Y")}}" disabled>
        </div>
    </div>


    <form action="{{ path('junior_etudiant_updateEtudiant', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

        <input type="hidden" name="_method" value="PUT" />
        <div>
            {{ form_label(edit_form.adresseEtudiant, "Adresse") }}
                {{ form_widget(edit_form.adresseEtudiant) }}
                {{ form_label(edit_form.telEtudiant, "Téléphone :") }}
                {{ form_widget(edit_form.telEtudiant) }}
                {{ form_label(edit_form.email, "Email") }}
                {{ form_widget(edit_form.email) }}

        </div>        
{{ form_rest(edit_form) }}
        <p>
            <button type="submit">Valider</button>
        </p>
    </form>

