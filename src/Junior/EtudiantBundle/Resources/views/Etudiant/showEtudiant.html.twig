            </tr>
            <tr>
                <th>N° SS</th>
                <td>{{ entity.numSecu }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ entity.dateNaissance }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ entity.telEtudiant }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            
        </tbody>
    </table>

