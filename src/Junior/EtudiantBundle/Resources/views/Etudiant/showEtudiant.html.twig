            <tr>
                <th>N° Etudiant</th>
                <td>{{ entity.numEtudiant }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nomEtudiant }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
