{% extends "JuniorEtudiantBundle:Etudiant:layoutEtudiant.html.twig" %}

{% block title %}
{{ parent()}} - Etudes
{% endblock %}

{% block content_etudiant %}


{% for flashMessage in app.session.flashbag.get('info') %}
    <div class="alert alert-info">
        {{ flashMessage }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{% endfor %}


{% for flashMessage in app.session.flashbag.get('erreur') %}
    <div class="alert alert-error">
        {{ flashMessage }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{% endfor %}


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            {#<th>Id</th>#}
            <th>Nom de l'étude</th>
            {#<th>Prix Journee</th>#}
            <th>Statut</th>
            <th>Detail</th>
            <th>Acompte</th>
        </tr>
    </thead>
    <tbody>
        {% set cpt = 0 %}
        {% if etudes[0] != NULL %}
            {% for etude in etudes %}
                <tr>
                    <td>{{ etude.nomEtude }}</td>
                    <td>{{ statuts[cpt] }}</td>
                    {% set cpt = cpt+1 %}
                    <td>   
                        <a href="{{ path('junior_etudiant_showEtude', {'idEtude': etude.id, 'idEtudiant':app.user.id}) }}" class="btn btn-primary btn-small">
                            <i class="icon-search icon-white"></i>
                            Voir l'étude
                        </a>
                    </td>
                    {% if etude.statutEtude == "En cours" %}
                        <td>   
                            <a href="{{ path('junior_etudiant_newAcompte', {'idEtude': etude.id}) }}" class="btn btn-info btn-small">
                                <i class="icon-edit icon-white"></i>
                                Demander un acompte
                            </a>
                        </td>
                    {% else %}
                        <td>   
                            <a href="#" class="btn btn-warning btn-small">
                                <i class="icon-ban-circle icon-white"></i>
                                Cette étude est terminée
                            </a>
                        </td>
                    {% endif %}
                    {#
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('etudiant_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('etudiant_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                    #}
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

{% endblock %} 