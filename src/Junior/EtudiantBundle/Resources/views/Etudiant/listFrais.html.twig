{% extends "JuniorEtudiantBundle:Etudiant:layoutEtudiant.html.twig" %}

{% block title %}
{{ parent()}} - Infos
{% endblock %}

{% block content_etudiant %}

<h2>Mes derniers frais</h2>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Date achat</th>
            <th>Etude</th>
            <th>Type frais</th>
            <th>Montant frais</th>
            <th>Statut</th>

        </tr>
    </thead>
    <tbody>
        {% for frais in list_frais %}
            <tr>
                <td>{{ frais.dateAchat|date("d/m/Y") }}</td>
                <td>{{ frais.etude.nomEtude }}</td>
                <td>{{ frais.typeFrais }}</td>
                <td>{{ frais.montantFrais }}</td>
                <td>todo</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button class="btn" type="button">
        <a href="{{ path('junior_etudiant_newFrais', { 'id': 1 }) }}">Enregistrer un nouveau frais</a>
    </button>


    <p></p>
    <h2>Tous mes remboursements de frais</h2>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>N° RF</th>
                <th>Date</th>
                <th>Nb frais</th>
                <th>Montant total</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
        {% for rf in list_rf %}
                <tr>
                    <td>{{ rf.id }}</td>
                    <td>{{ rf.dateRemboursement|date("d/m/Y")}}</td>
                    <td>{{ rf.frais.count }}</td>
                    <td>{{ rf.montantTotal }}</td>
                    <td><a href="{{ path('junior_etudiant_showRembFrais', {'idRF': rf.id}) }}" class="btn btn-primary btn-small">
                            <i class="icon-search icon-white"></i>
                            Détail
                        </a></td>

