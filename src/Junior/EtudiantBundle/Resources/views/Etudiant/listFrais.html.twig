{% extends "JuniorEtudiantBundle:Etudiant:layoutEtudiant.html.twig" %}

{% block title %}
{{ parent()}} - Infos
{% endblock %}

{% block content_etudiant %}

<h2>Tous mes frais</h2>
{% for flashMessage in app.session.flashbag.get('info') %}
    <div class="alert alert-info">
        {{ flashMessage }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{% endfor %}


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Date achat</th>
            <th>Etude</th>
            <th>Type frais</th>
            <th>Montant frais</th>
            <th>Statut</th>

        </tr>
    </thead>
    <tbody>
        {% for frais in list_frais %}
            <tr>
                <td>{{ frais.dateAchat|date("d/m/Y") }}</td>
                <td>{{ frais.etude.nomEtude }}</td>
                <td>{{ frais.typeFrais }}</td>
                <td>{{ frais.montantFrais }}</td>
                <td>todo</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a class="btn btn-primary" href="{{ path('junior_etudiant_newFrais', { 'id': 1 }) }}">Enregistrer un nouveau frais</a>



    



{% endblock %}