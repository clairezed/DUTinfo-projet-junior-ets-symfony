{% extends "JuniorEtudiantBundle:Etudiant:layoutEtudiant.html.twig" %}

{% block title %}
{{ parent()}} - Frais
{% endblock %}

{% block content_etudiant %}


<h2>Demander un acompte</h2>

{% if user.etudes == 0 %}

<p> Vous n'avez aucune étude, demande d'acompte impossible. </p>

{% else %}

<p> Sélectionner l'étude pour laquelle vous souhaitez demander un acompte </p>

<div class="well">
    <form method="post" {{ form_enctype(form) }}>
        <div>
            {{ form_label(form.etudes, "Nom de l'étude :") }}
                {{ form_widget(form.etudes) }}
            </div>

            {{ form_widget(form._token) }}
    <input type="submit" class="btn btn-primary" />
    <a class="btn btn-danger" href="{{ path('junior_etudiant_listEtudes') }}">Annuler</a>
</form>

</div>

{% endif %}



{% endblock %} 