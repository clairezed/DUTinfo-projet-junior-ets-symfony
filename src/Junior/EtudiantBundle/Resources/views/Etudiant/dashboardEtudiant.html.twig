{% extends "JuniorEtudiantBundle:Etudiant:layoutEtudiant.html.twig" %}

{% block title %}
{{ parent()}} - Dashboard
{% endblock %}

{% block content_etudiant %}


<h2>Mes derniers frais</h2>

<div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Date achat</th>
                <th>Etude</th>
                <th>Type frais</th>
                <th>Montant frais</th>
                <th>Statut</th>

            </tr>
        </thead>
        <tbody>
            {% for frais in list_frais %}
                <tr>
                    <td>{{ frais.dateAchat|date("d/m/Y") }}</td>
                    <td>{{ frais.etude.nomEtude }}</td>
                    <td>{{ frais.typeFrais }}</td>
                    <td>{{ frais.montantFrais }}</td>
                    <td>todo</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
      {# <button class="btn btn-primary" type="button"><a href="{{ path('junior_etudiant_listFrais', {'id':1}) }}" ><p>Voir tous les frais</p></a></button>
    <button class="btn btn-primary" type="button"><a href="#" ><p>Enregistrer des frais</p></a></button> #}
</div>
<div style="text-align:right">
    <a href="{{ path('junior_etudiant_listFrais') }}" class="btn btn-primary">
        Voir tous les frais
    </a>
    <a href="{{ path('junior_etudiant_newFrais') }}" class="btn btn-primary">
        Enregistrer des frais
    </a>
</div>

<div>
    <h2>Mes études en cours</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nom de l'étude</th>
                <th>Statut</th>
                <th>Detail</th>
                <th>Acompte</th>
            </tr>
        </thead>
        <tbody>
            {% set cpt = 0 %}
            {% if etudes[0] != NULL %}
                {% for etude in etudes %}
                    {% if etude.statutEtude == "En cours" %}
                    <tr>
                        <td>{{ etude.nomEtude }}</td>
                        <td>{{ statuts[cpt] }}</td>
                        {% set cpt = cpt+1 %}
                        <td>   
                            <a href="{{ path('junior_etudiant_showEtude', {'idEtude': etude.id, 'idEtudiant':app.user.id}) }}" class="btn btn-primary btn-small">
                                <i class="icon-search icon-white"></i>
                                Voir l'étude
                            </a>
                        </td>
                        <td>   
                            <a href="{{ path('junior_etudiant_newAcompte', {'idEtude': etude.id}) }}" class="btn btn-info btn-small">
                                <i class="icon-edit icon-white"></i>
                                Demander un acompte
                            </a>
                        </td>
                    {% endif %}
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
</div>
<div style="text-align:right">
    <a href="{{ path('junior_etudiant_listEtudes') }}" class="btn btn-primary">
        Voir toutes les études
    </a>
</div>
    
<p></p>
<p></p>
    
    

{% endblock %} 