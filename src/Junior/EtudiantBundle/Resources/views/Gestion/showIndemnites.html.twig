{% extends "JuniorEtudiantBundle:Gestion:layoutGestion.html.twig" %}

{% block title %}
{{ parent()}} - Indemnites
{% endblock %}

{% block content_gestion %}

<div>
    <div class="row-fluid">
        <div class="span6">
            <ul>
                <li>Nom étudiant : {{etudiant.nomEtudiant}}</li>
                <li>N° étudiant : {{etudiant.numEtudiant}}</li>
                <li>Nom de l'étude : {{indemnites.etude.nomEtude}}</li>
                <li>N° convention : {{indemnites.etude.convention.id}}</li>
            </ul>
        </div>
            <div class="span6">
            <ul>
                <li>Nature étudiant : {{statut}}</li>
                <li>Prix / journée : {{indemnites.indemniteJournee}} €</li>
            </ul>
        </div>
    </div>

    {% set totalIndemnites = indemnites.nbJours * indemnites.indemniteJournee %}
    <div class="row-fluid">
        <div class="span6">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nbre jours étude</th>
                        <th>Indemnité due</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{indemnites.nbJours}}</td>
                        <td>{{totalIndemnites}} €</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="span6">
            {% set cpt = 0 %}
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>N° acompte</th>
                        <th>Montant acompte</th>
                    </tr>
                </thead>
                <tbody>
                    {% if acomptes != NULL %}
                        {% for acompte in acomptes %}
                        <tr>
                            <td>{{acompte.id}}</td>
                            <td>{{montantsAcomptes[cpt]}} €</td>
                            {%set cpt = cpt + 1 %}
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td>Aucun</td>
                            <td>0 €</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    {% set total = totalIndemnites - totalAcomptes %}
    <div class="well">
        <div class="span4 offset4">
            Montant du versement : {{total}} €
        </div>
    </div>

    <p></p>

    <div class="row-fluid">
        <a href="{{ path('junior_gestion_selectEtudiantIndemnites', {'idEtude' : indemnites.etude.id}) }}" class="btn btn-info btn-small validButton">
            <i class="icon-chevron-left icon-white"></i>
            Retour au choix de l'étudiant
        </a>
        <a href="{{ path('junior_gestion_listEtudes') }}" class="btn btn-danger btn-small validButton">
            <i class="icon-list icon-white"></i>
            Retour à la liste des études
        </a>
    </div>
</div>

{% endblock %} 