{% extends "JuniorEtudiantBundle:Gestion:layoutGestion.html.twig" %}

{% block title %}
{{ parent()}} - Etude
{% endblock %}

{% block content_gestion %}

<div  class="container-fluid docref">

    <h2>Fiche convention</h2>
    <div>
        <div class="row-fluid">
            <div class="span6">
                <ul>
                    <li><b>Date : </b>{{convention.dateConvention|date('d/m/Y')}}</li>
                </ul>
            </div>
            <div class="span6">
                <ul>
                    <li><b>N° de convention : </b>{{convention.id}}</li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <ul>
                    <li><b>Nom de l'étude : </b>{{convention.etude.nomEtude}}</li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <ul>
                    <li><b>Nom de l'entreprise : </b>{{convention.entreprise.nomEntreprise}}</li>
                    <li><b>Adresse de l'entreprise : </b>{{convention.entreprise.adresseEntreprise}}</li>
                    <li><b>Téléphone de l'entreprise : </b>{{convention.entreprise.telEntreprise}}</li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span6">
                <ul>
                    <li><b>Durée de l'étude : </b> {{convention.etude.nbJoursEtude}}</li>
                    <li><b>Prix / journée : </b> {{convention.etude.prixJournee}}</li>
                </ul>
            </div>
            <div class="span6">
                <ul>
                    <li><b>Date fin prévue : </b> {{convention.etude.dateFinPrevue|date('d/m/Y')}}</li>
                </ul>
            </div>
        </div>
        <div class="container-fluid">    
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Etudiant responsable</th>
                        <th>Etudiants réalisateurs</th>
                        <th>Nombre de jours d'étude</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{responsable.etudiant.nomEtudiant}}</td>
                        <td></td>
                        <td>{{nbJours}}</td>
                    </tr>
                    {% for realisateur in realisateurs %}
                        <tr>
                            <td></td>
                            <td>{{realisateur.etudiant.nomEtudiant}}</td>
                            <td>{{nbJours}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %} 