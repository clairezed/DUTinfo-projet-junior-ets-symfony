{% extends "JuniorEtudiantBundle:Gestion:layoutGestion.html.twig" %}

{% block title %}
{{ parent()}} 
{% endblock %}

{% block content_gestion %}
{% for flashMessage in app.session.flashbag.get('info') %}
<div class="alert alert-info">
        {{ flashMessage }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{% endfor %}

        {% if list_rf[0] == NULL %}
    <p> Aucun remboursement de frais dans la base de données</p>
                    {% else %}

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>N° RF</th>
                <th>Etudiant</th>
                <th>Date</th>
                <th>Nb frais</th>
                <th>Montant total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>


            {% for rf in list_rf %}
            <tr>
                <td>{{ rf.id }}</td>
                <td>Nom</td>
                <td>{{ rf.dateRemboursement|date("d/m/Y")}}</td>
                <td>{{ rf.frais.count }}</td>
                <td>{{ rf.montantTotal }}</td>
                <td>
                    {#
                    <a href="{{ path('junior_gestion_showRF', {'idRF': rf.id}) }}" class="btn btn-primary btn-small">
                        <i class="icon-search icon-white"></i>
                        Détail
                    </a>
#}
                </td>
            </tr>
            {% endfor %}

        </tbody>
    </table>
                    {% endif %}

{% endblock %} 