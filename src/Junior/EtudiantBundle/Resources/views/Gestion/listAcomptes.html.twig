{% extends "JuniorEtudiantBundle:Gestion:layoutGestion.html.twig" %}

{% block title %}
{{ parent()}} - Acomptes
{% endblock %}

{% block content_gestion %}

    <div class="container-fluid">    
        <h2>Acomptes en attente</h2>
        {% if listAcomptesEnCours|length > 0 %}
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Nom Etudiant</th>
                        <th>Etude</th>
                        <th>Montant</th>
                        <th>Date</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    {% for acompte in listAcomptesEnCours %}
                        <tr>
                            <td>{{ acompte.id }}</td>
                            <td>{{ acompte.indemnite.etudiant.nomEtudiant }}</td>
                            <td>{{ acompte.indemnite.etude.nomEtude }}</td>
                            <td>{{ acompte.montantAcompte }}</td>
                            <td>{{ acompte.dateAcompte|date("d/m/Y") }}</td>
                            <td>
                                <a href="#" onclick="return(confirm('Valider cet acompte ?'));" class="btn btn-info btn-small">
                                    <i class="icon-thumbs-up icon-white"></i>
                                    Valider cet acompte
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p> Aucun acompte en cours </p>
        {% endif %}
               
        <h2>Acomptes validés</h2>
        {% if listAcomptesValides|length > 0 %}
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Nom Etudiant</th>
                        <th>Etude</th>
                        <th>Montant</th>
                        <th>Date</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    {% for acompte in listAcomptesValides %}
                        <tr>
                            <td>{{ acompte.id }}</td>
                            <td>{{ acompte.indemnite.etudiant.nomEtudiant }}</td>
                            <td>{{ acompte.indemnite.etude.nomEtude }}</td>
                            <td>{{ acompte.montantAcompte }}</td>
                            <td>{{ acompte.dateAcompte|date("d/m/Y") }}</td>
                            <td>
                                <a href="#" class="btn btn-info btn-small">
                                    <i class="icon-file icon-white"></i>
                                    Afficher le bulletin
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p> Aucun acompte validé </p>
        {% endif %}
  
{% endblock %} 