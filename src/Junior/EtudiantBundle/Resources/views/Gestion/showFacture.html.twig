{% extends "JuniorEtudiantBundle:Gestion:layoutGestion.html.twig" %}

{% block title %}
{{ parent()}} - Facture
{% endblock %}

{% block content_gestion %}

<div  class="container-fluid docref">
    <h2>FACTURE</h2>
    <div class="en-tete">
        <ul>
            <li><b>N° FACTURE : </b>{{facture.id}}</li>
            <li>N° SIRET (association) : 484 752 928 00040</li>
            <li>Date facture : {{facture.dateFacture|date("d/m/Y")}}</li>
            <li>Nom entreprise : {{facture.etude.convention.entreprise.nomEntreprise}}</li>
            <li>Adresse Entreprise : {{facture.etude.convention.entreprise.adresseEntreprise}}</li>
            <li><b>N° Convention : </b>{{facture.etude.convention.id}}</li>
            <li>Nom de l'étude : {{facture.etude.nomEtude}}</li>
            <li>Prix de la journée :{{facture.etude.prixJournee}} €</li>
        </ul>
    </div>

    <div class="row-fluid">
        <div class="span6">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nbre jours étude</th>
                        <th>Coût Etude</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{facture.etude.nbJoursEtude}}</td>
                        <td>{{facture.coutEtude}} €</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="span6">
        {% set cpt = 0 %}
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>N° RF</th>
                            <th>Total/convention</th>
                        </tr>
                    </thead>
                    <tbody>
                {% if listRF[0] != NULL %}
                    {% for RF in listRF %}
                            <tr>
                                <td>{{RF.id}}</td>
                                <td>{{montantRF[cpt]}} €</td>
                        {%set cpt = cpt + 1 %}
                            </tr>
                    {% endfor %}
                {% else %}
                            <tr>
                                <td>Aucun</td>
                                <td>0 €</td>
                            </tr>
                {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="wellLittle">
                <ul>
                    <li><b>Montant facture H.T : </b>{{facture.montantHT}} €</li>
                    <li><b>Montant TVA : </b>{{facture.montantTVA}} €</li>
                    <li><b>Montant facture TTC : </b>{{facture.montantTTC}} €</li>
                </ul>
            </div>

            <a href="{{ path('junior_gestion_listEtudes') }}" class="btn btn-info btn-small validButton">
                <i class="icon-chevron-left icon-white"></i>
                Retour à la liste des études
            </a>
        </div>
{% endblock %} 