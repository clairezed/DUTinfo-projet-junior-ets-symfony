{% extends "JuniorEtudiantBundle:Gestion:layoutGestion.html.twig" %}

{% block title %}
{{ parent()}} - Frais
{% endblock %}

{% block content_gestion %}


{% for flashMessage in app.session.flashbag.get('info') %}
<div class="alert alert-info">
        {{ flashMessage }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{% endfor %}

    <div class="container-fluid">    
        <h2>Frais en attente de validation</h2>
    {% if listFraisEnregistrés|length > 0 %}
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Nom Etudiant</th>
                    <th>Type</th>
                    <th>Montant</th>
                    <th>Statut</th>
                    <th>Valider</th>
                    <th>Refuser</th>
                </tr>
            </thead>
            <tbody>
                {% for frais in listFraisEnregistrés %}
                    <tr>
                        <td>{{ frais.dateAchat|date("d/m/Y") }}</td>
                        <td>{{ frais.etudiant.nomEtudiant }}</td>
                        <td>{{ frais.typeFrais }}</td>
                        <td>{{ frais.montantFrais }}</td>
                        <td>{{ frais.StatutFrais }}</td>
                        <td>
                            <a href="{{ path('junior_gestion_validFrais', {'idFrais': frais.id}) }}" onclick="return(confirm('Valider ce frais ?'));" class="btn btn-success btn-small">
                                <i class="icon-ok icon-white"></i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('junior_gestion_refusFrais', {'idFrais': frais.id}) }}" onclick="return(confirm('Refuser ce frais ?'));" class="btn btn-danger btn-small">
                                <i class="icon-remove icon-white"></i>
                            </a>
                        </td>
                        </tr>
                {% endfor %}
                    </tbody>
                </table>
    {% else %}
                <p> Aucun frais en attente de validation</p>
    {% endif %}



                <h2>Frais en attente de remboursement</h2>
    {% if listFraisNotInRF|length > 0 %}
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Nom Etudiant</th>
                            <th>Type</th>
                            <th>Montant</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                {% for frais in listFraisNotInRF %}
                            <tr>
                                <td>{{ frais.dateAchat|date("d/m/Y") }}</td>
                                <td>{{ frais.etudiant.nomEtudiant }}</td>
                                <td>{{ frais.typeFrais }}</td>
                                <td>{{ frais.montantFrais }}</td>
                                <td>{{ frais.StatutFrais }}</td>
                                <td>
                                    <a href="#" class="btn btn-info btn-small">
                                        <i class="icon-file icon-white"></i>
                                        Afficher le bulletin
                                    </a>
                                </td>
                            </tr>
                {% endfor %}
                        </tbody>
                    </table>
    {% else %}
                    <p> Aucun acompte validé </p>
    {% endif %}
                </div>


{% endblock %} 