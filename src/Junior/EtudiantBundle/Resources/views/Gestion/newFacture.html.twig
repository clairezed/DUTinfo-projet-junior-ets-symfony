{% extends "JuniorEtudiantBundle:Gestion:layoutGestion.html.twig" %}

{% block title %}
{{ parent()}} - Facture
{% endblock %}

{% block content_gestion %}

{#
{% set prixTotal = facture.etude.nbJoursEtude * facture.etude.prixJournee %}
{% set totalRF = 0 %}
#}

<div class="well">
    <ul>
        <li>N° FACTURE : {{facture.id}}</li>
        <li>N° SIRET (association) : 7894536</li>
        <li>Date facture : {{facture.dateFacture|date("d/m/Y")}}</li>
        <li>Nom entreprise : {{facture.etude.convention.entreprise.nomEntreprise}}</li>
        <li>Adresse Entreprise : {{facture.etude.convention.entreprise.adresseEntreprise}}</li>
        <li>N° Convention : {{facture.etude.convention.id}}</li>
        <li>Nom de l'étude : {{facture.etude.nomEtude}}</li>
        <li>Prix de la journée : {{facture.etude.prixJournee}} €</li>
    </ul>
</div>

<div class="row-fluid">
    <div class="span6">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nbre jours étude</th>
                    <th>Coût Etude</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{facture.etude.nbJoursEtude}}</td>
                    <td>{{facture.coutEtude}} €</td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="span6">
        {% set cpt = 0 %}
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>N° RF</th>
                    <th>Total/convention</th>
                </tr>
            </thead>
            <tbody>
                {% if listRF[0] != NULL %}
                    {% for RF in listRF %}
                    <tr>
                        <td>{{RF.id}}</td>
                        <td>{{montantRF[cpt]}} €</td>
                        {%set cpt = cpt + 1 %}
                    </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td>Aucun</td>
                        <td>0 €</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>

{#
{% set totalHT = prixTotal + totalRF%}
{% set montantTVA = totalHT * 19.6/100 %}
{% set totalTVA = totalHT + montantTVA %}
#}

<div class="well">
    <ul>
        <li>Montant facture H.T : {{facture.montantHT}} €</li>
        <li>Montant TVA : {{facture.montantTVA}} €</li>
        <li>Montant facture TTC : {{facture.montantTTC}} €</li>
    </ul>
</div>

<a href="{{ path('junior_gestion_closeEtude', {'idEtude': facture.etude.id}) }}" class="btn btn-info btn-small validButton">
    <i class="icon-check icon-white"></i>
    Valider
</a>

<a href="{{ path('junior_gestion_cancelFacture', {'idFacture': facture.id}) }}" class="btn btn-danger btn-small validButton">
    <i class="icon-chevron-left icon-white"></i>
    Annuler
</a>

{% endblock %} 